<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tree_asset_bundles" model="ir.ui.view">
        <field name="name">asset.bundles.tree</field>
        <field name="model">obsolete.asset.bundle</field>
        <field name="arch" type="xml">
            <tree string="Obsolete Asset Bundles" create="false" edit="false">
                <field name="obj_id"/>
                <field name="url"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="form_asset_bundles" model="ir.ui.view">
        <field name="name">asset.bundles.form</field>
        <field name="model">obsolete.asset.bundle</field>
        <field name="arch" type="xml">
            <form string="Asset Bundle" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="obj_id"/>
                        <field name="url"/>
                        <field name="create_date"/>
                        <field name="data" widget="binary" filename="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_obsolete_asset_bundles" model="ir.actions.act_window">
        <field name="name">Obsolete Asset Bundles</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">obsolete.asset.bundle</field>
        <field name="view_id" ref="tree_asset_bundles"/>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_asset_bundles"
              name="Asset Bundles"
              action="action_obsolete_asset_bundles"
              parent="base.menu_custom"
              sequence="100"
              groups="base.group_no_one"/>
</odoo>
