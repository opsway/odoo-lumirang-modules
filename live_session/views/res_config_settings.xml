<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="live_session">
                    <div class="o_setting_left_pane">
                        <field name="is_using_live_session"/>
                    </div>
                    <div class="o_setting_right_pane" id="web_live_session_settings">
                        <label for="is_using_live_session"/>
                        <div class="text-muted">
                            Use LiveSession
                        </div>
                        <div attrs="{'invisible': [('is_using_live_session', '=', False)]}">
                            <div class="content-group mt16">
                                <label for="live_session_key" class="o_light_label"/>
                                <field name="live_session_key"
                                       attrs="{'required':[('is_using_live_session','=',True)]}"/>
                            </div>
                        </div>
                        <div attrs="{'invisible': [('is_using_live_session', '=', False)]}">
                            <div class="content-group mt16">
                                <label for="live_session_type" class="o_light_label"/>
                                <field name="live_session_type"
                                       attrs="{'required':[('is_using_live_session','=',True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

