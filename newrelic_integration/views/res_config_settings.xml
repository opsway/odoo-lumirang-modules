<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_newrelic_config" model="ir.ui.view">
        <field name="name">newrelic config</field>
        <field name="model">res.company</field>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <form name="Newrelic Config">
                <field name="newrelic_config"/>
            </form>
        </field>
    </record>

    <record id="action_newrelic_config" model="ir.actions.act_window">
        <field name="type">ir.actions.act_window</field>
        <field name="name">Configure NewRelic</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="res_model">res.company</field>
        <field name="res_id" eval="1"/>
        <field name="view_id" ref="view_newrelic_config"/>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="newrelic">
                    <div class="o_setting_left_pane">
                        <field name="is_newrelic_running"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="is_newrelic_running"/>

                        <div class="content-group mt8">
                            <label for="is_using_newrelic" class="o_light_label"/>
                            <field name="is_using_newrelic"/>
                        </div>
                        <div class="text-muted">
                            Enable NewRelic, reboot the server after changing this value
                        </div>

                        <div class="content-group mt8">
                            <label for="newrelic_license_key" class="o_light_label"/>
                            <field name="newrelic_license_key"/>
                        </div>

                        <div class="content-group mt8">
                            <label for="is_using_newrelic_js" class="o_light_label"/>
                            <field name="is_using_newrelic_js"/>
                        </div>
                        <div class="text-muted">
                            Use NewRelic additional parameters and crash manager wrapper
                        </div>

                        <div class="content-group mt8">
                            <label for="is_newrelic_logging" class="o_light_label"/>
                            <field name="is_newrelic_logging"/>
                        </div>
                        <div class="text-muted">
                            Send backend logs to newrelic
                        </div>

                        <div class="content-group mt8">
                            <label for="newrelic_log_level" class="o_light_label"/>
                            <field name="newrelic_log_level"/>
                        </div>

                        <div class="content-group mt8">
                            <button name="%(newrelic_integration.action_newrelic_config)d" string="Edit config"
                                    type="action" class="oe_link" icon="fa-arrow-right"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

